{
  "name": "jsdoc-swagger-smartfold",
  "displayName": "JSDoc Swagger SmartFold",
  "description": "Auto-fold and validate @swagger/@openapi JSDoc blocks in JavaScript/TypeScript files.",
  "version": "0.0.2",
  "publisher": "maxicuyodev",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/maxicuyo94/jsdoc-swagger-smartfold.git"
  },
  "bugs": {
    "url": "https://github.com/maxicuyo94/jsdoc-swagger-smartfold/issues"
  },
  "homepage": "https://github.com/maxicuyo94/jsdoc-swagger-smartfold#readme",
  "keywords": [
    "swagger",
    "openapi",
    "jsdoc",
    "fold",
    "documentation",
    "api",
    "javascript",
    "typescript"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Linters"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:vue",
    "onLanguage:svelte"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "swaggerFold.foldNow",
        "title": "Fold Swagger Blocks",
        "category": "Swagger SmartFold",
        "icon": "$(fold)"
      },
      {
        "command": "swaggerFold.unfoldNow",
        "title": "Unfold Swagger Blocks",
        "category": "Swagger SmartFold",
        "icon": "$(unfold)"
      },
      {
        "command": "swaggerFold.toggleFold",
        "title": "Toggle Fold at Cursor",
        "category": "Swagger SmartFold",
        "icon": "$(fold-down)"
      },
      {
        "command": "swaggerFold.nextBlock",
        "title": "Go to Next Swagger Block",
        "category": "Swagger SmartFold",
        "icon": "$(arrow-down)"
      },
      {
        "command": "swaggerFold.previousBlock",
        "title": "Go to Previous Swagger Block",
        "category": "Swagger SmartFold",
        "icon": "$(arrow-up)"
      },
      {
        "command": "swaggerFold.exportToFile",
        "title": "Export Swagger to File",
        "category": "Swagger SmartFold",
        "icon": "$(export)"
      },
      {
        "command": "swaggerFold.exportProject",
        "title": "Export All Project Swagger to File",
        "category": "Swagger SmartFold",
        "icon": "$(file-code)"
      },
      {
        "command": "swaggerFold.copyAsJson",
        "title": "Copy Swagger Block as JSON",
        "category": "Swagger SmartFold",
        "icon": "$(clippy)"
      },
      {
        "command": "swaggerFold.preview",
        "title": "Preview Swagger UI",
        "category": "Swagger SmartFold",
        "icon": "$(preview)"
      }
    ],
    "keybindings": [
      {
        "command": "swaggerFold.foldNow",
        "key": "ctrl+alt+s f",
        "mac": "cmd+alt+s f",
        "when": "editorTextFocus"
      },
      {
        "command": "swaggerFold.unfoldNow",
        "key": "ctrl+alt+s u",
        "mac": "cmd+alt+s u",
        "when": "editorTextFocus"
      },
      {
        "command": "swaggerFold.toggleFold",
        "key": "ctrl+alt+s t",
        "mac": "cmd+alt+s t",
        "when": "editorTextFocus"
      },
      {
        "command": "swaggerFold.nextBlock",
        "key": "ctrl+alt+s down",
        "mac": "cmd+alt+s down",
        "when": "editorTextFocus"
      },
      {
        "command": "swaggerFold.previousBlock",
        "key": "ctrl+alt+s up",
        "mac": "cmd+alt+s up",
        "when": "editorTextFocus"
      },
      {
        "command": "swaggerFold.preview",
        "key": "ctrl+alt+s p",
        "mac": "cmd+alt+s p",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "JSDoc Swagger SmartFold",
      "properties": {
        "swaggerFold.autoFold": {
          "type": "boolean",
          "default": true,
          "description": "Auto-fold @swagger/@openapi JSDoc blocks when opening a file."
        },
        "swaggerFold.highlight": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable syntax highlighting and visual distinction for Swagger blocks."
        },
        "swaggerFold.exclude": {
          "type": "array",
          "default": [],
          "items": {
            "type": "string"
          },
          "description": "Glob patterns for files/folders to exclude from processing (e.g. '**/test/**', '**/node_modules/**')."
        },
        "swaggerFold.validationSeverity": {
          "type": "string",
          "enum": [
            "error",
            "warning",
            "info"
          ],
          "default": "warning",
          "description": "Severity level for OpenAPI validation errors."
        },
        "swaggerFold.autoFoldDelay": {
          "type": "number",
          "default": 300,
          "minimum": 0,
          "maximum": 5000,
          "description": "Delay in milliseconds before auto-folding blocks."
        },
        "swaggerFold.exportFormat": {
          "type": "string",
          "enum": [
            "yaml",
            "json"
          ],
          "default": "yaml",
          "description": "Default format for exporting OpenAPI documents."
        }
      }
    },
    "menus": {
      "editor/context": [
        {
          "command": "swaggerFold.toggleFold",
          "when": "editorTextFocus && resourceLangId =~ /javascript|typescript|javascriptreact|typescriptreact|vue|svelte/",
          "group": "swagger@1"
        },
        {
          "command": "swaggerFold.copyAsJson",
          "when": "editorTextFocus && resourceLangId =~ /javascript|typescript|javascriptreact|typescriptreact|vue|svelte/",
          "group": "swagger@2"
        },
        {
          "command": "swaggerFold.preview",
          "when": "editorTextFocus && resourceLangId =~ /javascript|typescript|javascriptreact|typescriptreact|vue|svelte/",
          "group": "swagger@3"
        }
      ],
      "editor/title": [
        {
          "command": "swaggerFold.preview",
          "when": "resourceLangId =~ /javascript|typescript|javascriptreact|typescriptreact|vue|svelte/",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --production",
    "esbuild-base": "node esbuild.js",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "watch": "npm run esbuild-watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish:vs": "vsce publish",
    "publish:ovsx": "ovsx publish",
    "publish:all": "npm run publish:vs && npm run publish:ovsx",
    "release": "node scripts/release.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "18.x",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vscode/vsce": "^3.2.1",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "ovsx": "^0.9.5",
    "prettier": "^3.7.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.48.0"
  },
  "dependencies": {
    "@apidevtools/swagger-parser": "^10.1.0",
    "dotenv": "^17.2.3",
    "js-yaml": "^4.1.0"
  }
}
